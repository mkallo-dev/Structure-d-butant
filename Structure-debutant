#include <stdio.h>
#include <stdlib.h>
typedef struct{
char nom[50];
char prenom[50];
float note[3];
float moy;
}Etudiant;

int main()
{
    Etudiant T[100];
    int i,j, n;
    float s=0.0;
    printf("Veuillez saisir la taille du tableau:");
    scanf("%d",&n);
    for(j=0; j<n; j++){
        printf("Etudiant n %d:", j+1);
        scanf("%s",T[j].nom);
        scanf("%s",T[j].prenom);
       //scanf("%f",&T[i].note);
        printf("Entrez les notes:\n");
    //for(j=0; j<3; j++)
        for(i=0; i<3; i++){
            printf("Note %d", i+1);
            scanf("%f", &T[j].note[i]);
            s+=T[j].note[i];
    }
     T[j].moy = s/3.0;
}
    for(i=0; i<n; i++){
         printf("La moyenne de l'Ã©tudiant %s %s est : %.2f\n", T[i].nom, T[i].prenom, T[i].moy);
    }


    return 0;
}
